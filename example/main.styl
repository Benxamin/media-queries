@require 'index.styl'

html, body
  margin 0
  padding 0
  min-height 100%
  min-width 100%

body:before
  display block
  position absolute
  top 20px
  left 20px
  content 'default'

  +screenSize('palm')
    content 'palm'

  +screenSize('phone')
    content 'phone'

  +screenSize('tablet')
    content 'tablet'

  +screenSize('laptop')
    content 'laptop'

  +screenSize('desktop')
    content 'desktop'

  +screenSize('large-desktop')
    content 'large-desktop'

body:after
  display block
  position absolute
  top 20px
  right 20px
  content 'default'

  +screenOrientation('portrait')
    content 'portrait'

  +screenOrientation('landscape')
    content 'landscape'
